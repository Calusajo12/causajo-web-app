---
import type {Testimonial} from "../types/testimonial";
import TestimonialS from "../components/TestimonialS.astro";

const testimonials: Testimonial[] = [
  {
    name: 'Carlos Martínez',
    role: 'Cliente Satisfecho',
    content: 'El evento fue mágico, gracias a su increíble trabajo.',
    imageUrl: '/user1.png'
  },
  {
    name: 'Lucía Ramírez',
    role: 'Cliente Satisfecha',
    content: 'Todo salió perfecto, fue mejor de lo que imaginé.',
    imageUrl: '/user2.png'
  },
  {
    name: 'David Rojas',
    role: 'Organizador Corporativo',
    content: 'Calusajo superó nuestras expectativas, 100% recomendados.',
    imageUrl: '/user3.png'
  }
];
---
 
 
 <section class="relative min-h-screen flex flex-col justify-center items-center text-white bg-black/80 pt-32 px-6 overflow-hidden">
  <div class="absolute inset-0 -z-10">
    <img
      src="/bgmain.webp"
      alt="Salón decorado"
      class="w-full h-full object-cover object-center opacity-60"
    />
  </div>

  <div class="relative z-10 max-w-4xl text-center lg:text-start mt-10">
    <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold leading-tight">
      TRANSFORMAMOS TUS SUEÑOS,<br />
      <span class="text-[#e8d7b9]">EN EVENTOS INOLVIDABLES.</span>
    </h1>
    <p class="mt-4 text-gray-200">
      No te vendemos un servicio, te vendemos una experiencia. Deja todo en nuestras manos.
    </p>    
    <div class="mt-8 w-152px items-center flex flex-col md:flex-row justify-center md:justify-start gap-4">
      <button class="bg-[#e8d7b9] hover:bg-[#d5c5a7] text-black px-6 py-3 rounded-md font-semibold shadow">
        Contáctanos ya
      </button>
      <button class="bg-transparent underline hover:border-[#e8d7b9] px-6 py-3 rounded-md font-semibold text-white hover:text-[#e8d7b9]">
        Conócenos más
      </button>
    </div>
  </div>



  <TestimonialS testimonials={testimonials} />
</section>
