---
import { advantages } from "../data/Advantages";
import Card from "../components/Card.astro";
---

<section class="mt-10 mb-5">
  <div
    class="flex flex-col items-center content-center gap-6 max-w-screen-xl mx-auto p-4 md:p-8"
  >
    <div
      class="flex items-center justify-center gap-6 lg:gap-10 max-w-screen-xl mx-auto p-4 md:p-8"
    >
      <h1 class="text-4xl lg:text-6xl text-center">
        ¿Por qué
        <span class="text-amber-400">contratarnos</span>
        ?
      </h1>
    </div>
      <div
        class="flex flex-col items-center gap-4 lg:flex-row lg:justify-between lg:gap-8 p-4 md:p-8 mb-5"
      >
        {
          advantages.map((advantage) => (
            <Card name={advantage.title} description={advantage.description} icon={advantage.icon}/>
          ))
        }
      </div>
  </div>
</section>
