---
import Menu from "./icons/Menu.astro";
---

<header class="fixed top-0 left-0 w-full z-50 bg-transparent backdrop-blur-md">
  <div class="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center">

    <button id="menu-btn" class="md:hidden">
      <Menu class="h-6 w-6 hover:scale-105"/>
    </button>

    <div class="flex items-center gap-2">
      <img src="/logo_oficial.png" alt="Logo Calusajo" class="h-16 md:h-20" />
    </div>

    <nav class="hidden md:flex gap-8 text-white font-medium text-[20px]">
      <a href="" class="hover:text-amber-300">Inicio</a>
      <a href="#events" class="hover:text-amber-300">Eventos</a>
      <a href="#servicios" class="hover:text-amber-300">Servicios</a>
      <a href="/aboutUs" class="hover:text-amber-300">Conócenos</a>
    </nav>

    <button class="bg-[#e8d7b9] hover:bg-[#d5c5a7] text-black px-4 py-2 rounded-md font-semibold shadow">
      Contáctanos
    </button>
  </div>

  <!-- Menú Mobile -->
  <nav id="mobile-menu" class=" flex flex-col md:hidden items-center justify-center px-6 py-4">
    <a href="/home" class="block text-white py-2 hover:text-amber-300">Inicio</a>
    <a href="#events" class="block text-white py-2 hover:text-amber-300">Eventos</a>
    <a href="#servicios" class="block text-white py-2 hover:text-amber-300">Servicios</a>
    <a href="/aboutUs" class="block text-white py-2 hover:text-amber-300">Conócenos</a>
  </nav>
</header>

<script>
  const menuBtn = document.getElementById('menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  if (menuBtn && mobileMenu) {
    menuBtn.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }
</script>