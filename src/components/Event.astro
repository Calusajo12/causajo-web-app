---
import { ChevronRight } from '@lucide/astro'

export interface Props {
  title: string;
  image: string;
  description?: string;
  link: string;
  class: string;
}

 const { title, image, description, link } = Astro.props;
---

<article class={Astro.props.class}>
    <h2 class="italic font-bold text-2xl pb-2">{title}</h2>
    <p class="italic text-sm font-light pb-4">{description}</p>
    <img class="h-auto max-h-auto w-auto max-w-auto object-contain rounded-lg" src={image} alt={title} />
    <a href={link} target="_blank" rel="noopener noreferrer"> 
        <div class="flex items-center justify-center pt-4">
            <p class="underline inline-flex items-center">Cotiza ya<ChevronRight class="w-5 h-5 ml-1" /></p>
        </div>
    </a>
</article>

