---
import { events } from "../data/events";
import Event from "../components/Event.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout
  title="Todos los Eventos - Calusajo"
  description="Descubre todos los eventos que hemos realizado, desde bodas hasta fiestas corporativas. Inspírate con nuestro portfolio."
>
  <main class="mt-32 p-4 md:p-8 mb-5">
    <div
      class="flex flex-col items-center content-center gap-6 lg:gap-10 max-w-screen-xl mx-auto lg:view"
    >
      <div>
        <h1 class="text-2xl lg:text-6xl text-center">
          Eventos que inspiran, <br />
          <span class="text-[#e8d7b9]">Momentos que perduran</span>
        </h1>
      </div>
      <div class="flex flex-col items-center gap-4">
        <h2 class="font-bold text-xl lg:text-4xl">Portfolio</h2>
        <p>Descubre nuestra magia en cada evento</p>
      </div>

      <div class="hidden lg:flex flex-col w-full items-center">
        {
          events.map((event) => (
            <Event
              class="block-event pb-8"
              title={event.title}
              description={event.description}
              image={event.image}
              link={event.link}
            />
          ))
        }
      </div>

      <div class="flex flex-row justify-between pt-4 gap-2 items-center">
        <p class="text-white font-bold">¿Tienes un evento planeado?</p>
        <a
          href="https://wa.me/+573104137728?text=Hola%2C%20estoy%20interesado%20en%20cotizar%20un%20evento%20con%20ustedes."
        >
          <button
            class="bg-[#e8d7b9] text-black font-extrabold px-4 py-2 rounded-l whitespace-nowrap hover:cursor-pointer"
          >
            Cotizalo ya aquí
          </button>
        </a>
      </div>
    </div>
  </main>
</Layout>
